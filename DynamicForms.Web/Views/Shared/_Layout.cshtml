<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render($"~/Content/styles/{ApplicationFormContext.Configuration.Settings.Brand.Theme}")
</head>
<body>
  @Html.Action("TopMenu", "Parts")
  <div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
      <p>&copy; @DateTime.Now.Year - Proof of concept for the new application forms</p>
    </footer>
  </div>

  @Scripts.Render("~/bundles/scripts")
  <script>
    $('[data-toggle="tooltip"]').tooltip();
  </script>
  @RenderSection("scripts", required: false)
</body>
</html>
